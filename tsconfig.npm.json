{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es2017", "es7", "es6", "dom"
    ],
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "include": [
    "src/lib"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*react.test.tsx*",
    "__snapshots__",
    "./node_modules",
    "./node_modules/*",
    "./node_modules/@types/node/index.d.ts",
  ]
}
